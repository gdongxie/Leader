<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--   <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!-- <item name="colorAccent">@color/colorAccent</item>-->
    </style>
    <!--底部导航栏按钮样式-->
    <style name="navigation_radio">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/font_grey</item>
        <item name="android:textSize">@dimen/font_size_9</item>

    </style>
    <!--  滚动条样式 -->
    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">1800</item>
    </style>
</resources>
